---
const { title, subtitle } = Astro.props;
---

<div class="flex font-poppins">
  <div class="education__time">
    <span class="w-4 h-4 bg-primary1 block rounded-full mt-1"></span>
    <span class="education__line bg-primary1  block h-full w-[2px] translate-x-[7px]"></span>
  </div>
  <div class="experience__data bd-grid px-5">
    <h3 class="font-semibold mb-1">{title}</h3>
    <span class="font-light text-sm">{subtitle}</span>
    <p class="my-2 text-justify">
      <slot />
    </p>
  </div>
</div>
<style>
  .bg-primary1 {
    --tw-bg-opacity: 1;
    background-color: rgb(87, 13, 248)
}
.grid {
    display: grid;
}
.mx-6-margin {
  margin-left: 7.5rem;
  margin-right: 1.5rem;
}
  
</style>

